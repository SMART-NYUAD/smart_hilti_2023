<?xml version="1.0"?>
<launch>
    <arg name="use_rviz" default="true"/>
    <param name="use_sim_time" value="true"/>
    <arg name="bag_file" default="site2_robot_2"/>
    <!-- <arg name="bag_file" default="calibration_handheld"/> -->

    <include file="$(find hdl_graph_slam)/launch/hdl_graph_slam_501.launch">
        <!-- <arg name="enable_floor_detection" default="false" /> -->
    </include>

    <!-- If not using docker, uncomment the following line for visualization -->
    <node if="$(arg use_rviz)" name="rviz" pkg="rviz" type="rviz" args="-d $(find hilti)/rviz/hdl_graph_slam.rviz"/>

    <node pkg="rosbag" type="play" name="player" output="log" args="--clock -r 2 $(find hilti)/bag/$(arg bag_file).bag">
        <remap from="/rslidar_points" to="/velodyne_points"/>
        <remap from="/gpsimu_driver/imu_data" to="/imu/data"/>
    </node>

    <node pkg="tf" type="static_transform_publisher" name="lidar_publisher" args="0 0 0 0 0 0 base_link rslidar 300" />
</launch>